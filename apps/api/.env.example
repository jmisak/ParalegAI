# Application
NODE_ENV=development
PORT=3001
CORS_ORIGINS=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ironclad?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-key-at-least-32-characters
JWT_REFRESH_EXPIRES_IN=7d

# Session
SESSION_SECRET=your-session-secret-key-at-least-32-chars
SESSION_TIMEOUT_MINUTES=15
SESSION_ABSOLUTE_TIMEOUT_HOURS=8

# AI Providers
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
AI_DEFAULT_PROVIDER=anthropic

# Storage (S3 or compatible)
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
LOCAL_STORAGE_PATH=./uploads

# Encryption
ENCRYPTION_KEY=your-encryption-key-at-least-32-characters

# External Integrations
DOCUSIGN_INTEGRATION_KEY=
DOCUSIGN_USER_ID=
DOCUSIGN_ACCOUNT_ID=

# API Base URL (for share links)
API_BASE_URL=http://localhost:3001
