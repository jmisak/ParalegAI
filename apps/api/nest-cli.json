{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "builder": "swc",
    "typeCheck": false,
    "tsConfigPath": "tsconfig.build.json",
    "assets": [
      {
        "include": "../prisma/**/*",
        "outDir": "./dist/prisma",
        "watchAssets": true
      }
    ]
  },
  "generateOptions": {
    "spec": true,
    "flat": false
  }
}
