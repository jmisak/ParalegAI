# IRONCLAD Development Environment Configuration
# Copy to .env.development for local development
# This file contains development-specific overrides

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
APP_PORT=3001
APP_HOST=localhost
LOG_LEVEL=debug
TRUST_PROXY=false

# =============================================================================
# DATABASE
# =============================================================================
# Local PostgreSQL (Docker recommended)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ironclad_dev?schema=public
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=5

# =============================================================================
# REDIS
# =============================================================================
# Local Redis (Docker recommended)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Development secrets (NOT for production)
JWT_SECRET=dev_jwt_secret_do_not_use_in_production_minimum_64_characters_long
SESSION_SECRET=dev_session_secret_do_not_use_in_production_minimum_64_chars
CSRF_SECRET=dev_csrf_secret_do_not_use_in_production

# Relaxed Argon2 for faster development
ARGON2_MEMORY_COST=16384
ARGON2_TIME_COST=2
ARGON2_PARALLELISM=1

# =============================================================================
# SECURITY
# =============================================================================
# Development CORS (permissive)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Rate limiting (relaxed for development)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# ENCRYPTION
# =============================================================================
# Development encryption keys (NOT for production)
MASTER_ENCRYPTION_KEY=ZGV2X21hc3Rlcl9rZXlfbm90X2Zvcl9wcm9kdWN0aW9u
FIELD_ENCRYPTION_KEY=ZGV2X2ZpZWxkX2tleV9ub3RfZm9yX3Byb2R1Y3Rpb24=

# =============================================================================
# AI PROVIDERS
# =============================================================================
# Use your development API keys
ANTHROPIC_API_KEY=sk-ant-your_dev_anthropic_key
OPENAI_API_KEY=sk-your_dev_openai_key

# Reduced limits for development
AI_GATEWAY_TIMEOUT=60000
AI_MAX_TOKENS=2048

# =============================================================================
# STORAGE
# =============================================================================
# Local storage for development
S3_BUCKET=
LOCAL_STORAGE_PATH=./storage/dev

# =============================================================================
# EMAIL
# =============================================================================
# Use mailhog or similar for local email testing
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=dev@ironclad.local

# =============================================================================
# INTEGRATIONS
# =============================================================================
# DocuSign sandbox
DOCUSIGN_BASE_URL=https://demo.docusign.net/restapi

# =============================================================================
# MONITORING
# =============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
APM_ENABLED=false

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================
# Enable development-only features
DEV_SEED_DATABASE=true
DEV_MOCK_AUTH=false
DEV_VERBOSE_ERRORS=true
DEV_DISABLE_MFA=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_MFA_REQUIRED=false
FEATURE_AI_ENABLED=true
FEATURE_DOCUMENT_ANALYSIS=true
